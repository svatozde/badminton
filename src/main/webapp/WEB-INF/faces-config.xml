<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="2.0"
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <application>
	<!-- Spring beans mohou byt pouzity jako backing beany -->
	<el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>cs</supported-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
        <resource-bundle>
            <base-name>cz.cvut.kbss.wpa.locale.translation</base-name>
            <var>msgs</var>
        </resource-bundle>
    </application>
    <navigation-rule>
        <from-view-id>/*</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect />
        </navigation-case>
        <navigation-case>
            <from-outcome>signin</from-outcome>
            <to-view-id>/signInPlayer.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>place</from-outcome>
            <to-view-id>/createPlace.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>league</from-outcome>
            <to-view-id>/createLeague.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>leagues</from-outcome>
            <to-view-id>/leaguesList.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/createPlace.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/registerPlayer.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/createLeague.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/leaguesList.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>leagueDetail</from-outcome>
            <to-view-id>/leagueDetail.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/leagueDetail.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>matchDetail</from-outcome>
            <to-view-id>/matchDetail.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/matchDetail.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>match</from-outcome>
            <to-view-id>/matchDetail.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
